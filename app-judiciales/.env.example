# Variables de entorno para el Sistema de Expedientes Militares
# Copiar a .env y configurar con valores reales para producci√≥n

# MongoDB Configuration (Cloud Database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/expedientes_db?retryWrites=true&w=majority
MONGODB_DATABASE=expedientes_db

# Backend Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h
GIN_MODE=release
ENV=production
PORT=8082

# Frontend Configuration
NODE_ENV=production
BACKEND_URL=http://backend:8082
NEXT_TELEMETRY_DISABLED=1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Timezone
TZ=America/Lima

# Nginx Configuration (if using SSL)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security & Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600